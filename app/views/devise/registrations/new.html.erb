<div class="row">
<div class="col-md-12 header-synch-home form-group">
<h3>SIGN UP</h3>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<div align="center">
    <h3>Email</h3><h3><%= f.text_field :email, required: true, autofocus: true %></h3>
    <h3>Password</h3><h3><%= f.text_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %></h3>
    <h3>Confirm Password</h3><h3><%= f.text_field :password_confirmation, required: true %></h3>
   <%= f.button :submit, "Sign up" %>

	<% end %>

	<%= render "devise/shared/links" %>
 
</div>
</div>
