<div class="row">
<div class="header-synch-home col-md-12  form-group">
<h3>LOG IN</h3>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div align="center">
    <h3>Email</h3>
    <h3><%= f.text_field :email, required: false, autofocus: true %></h3>
    <h3>Password</h3>
    <h3><%= f.text_field :password, required: false %></h3>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div align="center">
    <%= f.button :submit, "Log in" %><br>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>

